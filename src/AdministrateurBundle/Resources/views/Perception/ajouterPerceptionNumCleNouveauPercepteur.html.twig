{% extends '::base.html.twig' %}
{% block body %}

{% for message in app.flashes('success') %}
<div class="alert alert-success">
  {{ message }}
</div>
{% endfor %}

  <link href="/css/nouvellePerception.css" rel="stylesheet">



<div class="container alert alert-info ">
  <h2>Ajouter une perception</h2>
  <h3> Veuillez renseigner les champs suivants : </h3>

  {% form_theme form 'bootstrap_3_layout.html.twig' %}
  {{ form_start(form) }}
  <div class="champs">
  {{form_row(form.percepteur.nomPercepteur)}}
  {{form_row(form.percepteur.prenomPercepteur)}}


   <input type="checkbox" name="test[]" />Email
    <input type="checkbox" name="test[]" />Téléphone 

  {{form_row(form.percepteur.email)}}
  {{form_row(form.percepteur.telephone)}}

</div>
  {{form_row(form.percepteur.typePercepteur)}}

<div class="champs">
  {{form_row(form.percepteur.organisation)}}
  {{form_row(form.percepteur.service)}}
</div>


  {{form_row(form.typePerception)}}
  <div id="dateDebut">
    {{form_row(form.dateDebut)}}
  </div>
  <div id="dateFin">
    {{form_row(form.dateFin)}}
  </div>

  
  {{form_row(form.choixPerception)}}
<div class="champs">
  {{form_row(form.passPartiel1)}}

  {{form_row(form.passPartiel2)}}
  {{form_row(form.passPartiel3)}}

  <p id="paragpp1"> Pass 1 : </p>
  
  <select class="form-control" id="Pass1">
    <option> - Selectionnez le pass 1 - </option>
    {% for pass in pp1 %}

    <option data-id="{{pass.id}}">{{pass.nomPass1}}</option>
    {% endfor %}
  </select>


  <p id="paragpp2">Pass 2 :</p>
  <select class="form-control" id="Pass2" disabled>
    <option> - Selectionnez le pass 2 - </option>
    {% for pass in pp2 %}

    <option class="pass2cacher{{pass.id}}" data-idpartiel="{{pass.PassPartiel1.id}}" data-id="{{pass.id}}">{{pass.nomPass2}}</option>
    {% endfor %}
  </select>


  <p id="paragpp3">Pass 3 :</p>

  <select class="form-control" id="Pass3" disabled>
    <option> - Selectionnez le pass 3 - </option>
    {% for pass in pp3 %}

    <option class="pass3cacher{{pass.id}}" data-idpartiel="{{pass.PassPartiel2.id}}" data-id="{{pass.id}}">{{pass.nomPass3}}</option>
    {% endfor %}
  </select>




  <div id="variure">
    {{form_row(form.variure)}}
  </div>

</div>

  {{ form_end(form) }}



  
</div>

<div id="nouvellePerception">
<a href="{{ path('ajouterPerception') }}" class="btn btn-info btn-lg"><span class="glyphicon glyphicon-plus"></span>  Nouvelle perception</a>
</div>

<script src="/js/ajouterPerceptionNumCle.js"></script>

{% endblock %}

