<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <link rel="icon" type="image/png" href="img/favicon.png" />
  <title>{% block title %}PALR{% endblock %}</title>

  {% block stylesheets %}
  <link href="/css/bootstrap.css" rel="stylesheet">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <link href="/css/perception.css" rel="stylesheet">
  <link href="/css/dialogue.css" rel="stylesheet">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css">
  <style>
  @import url('https://fonts.googleapis.com/css?family=Roboto');
  </style>
  {% endblock %}
  {% block javascripts %}
  <script type="text/javascript" src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  <script src="http://www.datejs.com/build/date.js" type="text/javascript"></script>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/css/select2.min.css" rel="stylesheet" />
  <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/js/select2.min.js"></script>
  <script src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
  <script src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
  {% endblock %}
</head>
<body>

<nav class="navbar navbar-default">
  <div class="container-fluid">
    <ul class="nav navbar-nav">
      <li><a href="{{ path('accueil')}}">Accueil</a></li>
      {% if is_granted(expression('"ROLE_USER" in roles')) %}
        <li><a href="{{ path('perception') }}">Perceptions</a></li>
          {% if is_granted(expression('"ROLE_SUPER_ADMIN" in roles')) %}
            <li><a href="{{path('panel')}}">Panel admin</a></li>
          {% endif %}
        <li id="username"><a> Connecté en tant que {{ app.user.username }}</a></li>
      {% else %}
        <li><a href=" {{ path('fos_user_security_login') }}"><span class="glyphicon glyphicon-log-in"></span> Se connecter</a></li>
      {% endif %}

      <!-- <li><a href="{{ path('bd') }}">Bases de données</a></li>
      <li><a href="{{ path('Inventaire') }}">Inventaire</a></li>
      <li><a href="{{ path('aide') }}">Aide</a></li> -->
    </ul>
  </div>
</nav>

  {% block body %}{% endblock %}
</body>
</html>
