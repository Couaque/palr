{% extends 'base.html.twig' %}
{% block body %}
<div class="text-center">
<img src="img/Logo_PALR.jpg" alt="Logo">
<h2 class="login">Bienvenue ! Veuillez vous connecter.</h2>
<div class="panel panel-default panel-login">
 <div class="panel-body col-sm-4 col-centered">

<form action="{{ path("fos_user_security_check") }}" method="post">
   <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
<div class="formgroup form-group">
   <label for="username">{{ 'Nom d\'Utilisateur'|trans }}</label>
   <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
</div>

<div class="formgroup form-group">
   <label for="password">{{ 'Mot de Passe'|trans }}</label>
   <input class="form-control" type="password" id="password" name="_password" required="required" />
<div>

<div class="form-group">
   <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
   <label for="remember_me">{{ 'Se Souvenir de Moi'|trans }}</label>
</div>

   <input class="btn btn-primary" type="submit" id="_submit" name="_submit" value="{{ 'Se Connecter'|trans }}" />

</form>
 </div>
{% endblock %}